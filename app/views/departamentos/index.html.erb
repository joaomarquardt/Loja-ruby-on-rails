<p style="color: green"><%= notice %></p>

<h1>Departamentos</h1>

<table class="table table-bordered table-hover ">
  <thead>
    <tr>
      <th>Nome</th>
    </tr>
  </thead>
  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.nome %></td>
        <td><%= link_to 'Mostrar produtos', departamento, class:"btn btn-default"  %></td>
        <td><%= link_to 'Editar', edit_departamento_path(departamento), class:"btn btn-default"%>
        <td><%= link_to 'Remover', departamento, method: :delete,  data: {confirm: 'Tem certeza que deseja deletar esse Departamento?'}, class:"btn btn-default"%> </td>
    <% end %>
  </tbody>
</table>
<%= link_to "Criar novo departamento", new_departamento_path, class:"btn btn-default" %>
